<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}
                AgenceLoc
            {% endblock %}
        </title>

        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <link
        rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

        {# CDN Bootstrap#}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {# NAVBAR Bootstrap #}
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('app_agenceloc') }}">AgenceLoc</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-link brand" aria-current="page" href="{{ path('app_agenceloc') }}">
                            <i class="fa-solid fa-house"></i>
                        </a>
                        <a class="nav-link" href="#agencelocCatalogueVehicule">[ Nos voitures <i class="fa-solid fa-car"></i> ]</a>
                        <a class="nav-link" href="#agencelocReservationForm">[ Réservation <i class="fa-solid fa-key"></i> ]</a>
                        {% if app.user is not null %}
                            <div>
                                <a class="nav-link" href="#">Profil</a>
                            </div>
                            <div class="nav-link">
                                {% if is_granted("ROLE_ADMIN") %}
                                    <a class="nav-link" href="#" ?>
                                        <i class="fa-solid fa-user-gear"></i>
                                    </a?<iclass="fa-solidfa-user">
                            {% else %}
                                </i>
                            {% endif %}
                            Bonjour
                            {{ app.user.firstname }}</div>
                        <div>
                            <a class="nav-link" href="#" class="text-danger">
                                <i class="fa-solid fa-arrow-right-from-bracket"></i>
                            </a>
                        </div>
                    {% else %}
                        <div>
                            <a class="nav-link" href="#" class="text-warning">
                                [ Inscription <i class="fa-solid fa-user-plus"></i> ]
                            </a>
                        </div>
                        <div>
                            <a class="nav-link" href="#" class="text-success">
                                [ Se connecter <i class="fa-solid fa-arrow-right-to-bracket"></i> ]
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </nav>
        <div class="container"> {% block body %}{% endblock %}</div>

        <!-- Copyright -->
        <div class="copyright text-center"><p><i class="fa-solid fa-copyright"></i> 2022 Copyright: HOTTIN Eric</p></div=>
        <!-- Copyright -->

        {# Font Awesomw#}
        <script src="https://kit.fontawesome.com/032b0d3637.js" crossorigin="anonymous"></script>

        {# JS Bootstrap#}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>
</html>
